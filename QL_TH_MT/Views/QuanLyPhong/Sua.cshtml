@model PhongThucHanhViewModel
@{
    ViewData["Title"] = "Sửa phòng thực hành";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil-square me-2"></i>Sửa phòng thực hành: @Model.TenPhong
            </div>
            <div class="card-body">
                <form asp-action="Sua" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="MaPhong" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mã phòng</label>
                            <input type="text" class="form-control" value="@Model.MaPhong" readonly disabled />
                            <small class="text-muted">Mã phòng không thể thay đổi</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenPhong" class="form-label">Tên phòng <span class="text-danger">*</span></label>
                            <input asp-for="TenPhong" class="form-control" required />
                            <span asp-validation-for="TenPhong" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ViTri" class="form-label">Vị trí</label>
                            <input asp-for="ViTri" class="form-control" placeholder="VD: Tầng 1, Nhà E7" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="TrangThaiHoatDong" class="form-check-input" type="checkbox" />
                                <label asp-for="TrangThaiHoatDong" class="form-check-label">Hoạt động</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SucChua" class="form-label">Sức chứa (số máy) <span class="text-danger">*</span></label>
                            <input asp-for="SucChua" type="number" class="form-control" min="1" required />
                            <span asp-validation-for="SucChua" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SoMayHoatDong" class="form-label">Số máy hoạt động <span class="text-danger">*</span></label>
                            <input asp-for="SoMayHoatDong" type="number" class="form-control" min="0" required />
                            <span asp-validation-for="SoMayHoatDong" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    </div>
                    
                    @if (Model.NgayKiemKeGanNhat.HasValue)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Kiểm kê gần nhất:</strong> 
                            @Model.NgayKiemKeGanNhat.Value.ToString("dd/MM/yyyy HH:mm")
                            @if (!string.IsNullOrEmpty(Model.TenNguoiKiemKe))
                            {
                                <span>bởi @Model.TenNguoiKiemKe</span>
                            }
                        </div>
                    }
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/QuanLyPhong" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <div>
                            <a href="/QuanLyPhong/ChiTiet/@Model.Id" class="btn btn-outline-info me-2">
                                <i class="bi bi-eye me-1"></i>Xem chi tiết
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
