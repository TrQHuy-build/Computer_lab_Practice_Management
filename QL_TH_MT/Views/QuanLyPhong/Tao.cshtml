@model PhongThucHanhCreateViewModel
@{
    ViewData["Title"] = "Thêm phòng thực hành";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-building me-2"></i>Thêm phòng thực hành mới
            </div>
            <div class="card-body">
                <form asp-action="Tao" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenPhong" class="form-label">Tên phòng <span class="text-danger">*</span></label>
                            <input asp-for="TenPhong" class="form-control" placeholder="VD: E7.01" required />
                            <span asp-validation-for="TenPhong" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ViTri" class="form-label">Vị trí</label>
                            <input asp-for="ViTri" class="form-control" placeholder="VD: Tầng 1, Nhà E7" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SucChua" class="form-label">Sức chứa (số máy) <span class="text-danger">*</span></label>
                            <input asp-for="SucChua" type="number" class="form-control" min="1" required />
                            <span asp-validation-for="SucChua" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SoMayHoatDong" class="form-label">Số máy hoạt động <span class="text-danger">*</span></label>
                            <input asp-for="SoMayHoatDong" type="number" class="form-control" min="0" required />
                            <span asp-validation-for="SoMayHoatDong" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Phần mềm đã cài đặt</label>
                        <div class="row">
                            @if (ViewBag.PhanMems != null)
                            {
                                foreach (var pm in ViewBag.PhanMems as IEnumerable<SelectListItem>)
                                {
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="PhanMemIds" value="@pm.Value" 
                                                   class="form-check-input" id="pm_@pm.Value">
                                            <label class="form-check-label" for="pm_@pm.Value">@pm.Text</label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/QuanLyPhong" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Thêm phòng
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
