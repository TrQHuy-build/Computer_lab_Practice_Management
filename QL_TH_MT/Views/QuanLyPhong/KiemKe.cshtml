@model List<PhongThucHanhViewModel>
@{
    ViewData["Title"] = "Kiểm kê phòng thực hành - Tuần 1";
    var choPhepKiemKe = ViewBag.ChoPhepKiemKe ?? false;
    var hocKy = ViewBag.HocKy as QL_TH_MT.Models.HocKyNew;
    
    // Thống kê
    var tongPhong = Model.Count;
    var phongDaKiemKe = Model.Count(p => p.NgayKiemKeGanNhat.HasValue);
    var phongChuaKiemKe = tongPhong - phongDaKiemKe;
    var phongHoatDong = Model.Count(p => p.DangHoatDong);
    var phongNgung = tongPhong - phongHoatDong;
    var tongMay = Model.Sum(p => p.SucChua);
    var mayHoatDong = Model.Sum(p => p.SoMayHoatDong);
    var tyLeHoatDong = tongMay > 0 ? (mayHoatDong * 100.0 / tongMay) : 0;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4><i class="bi bi-clipboard-check me-2"></i>Kiểm kê phòng thực hành - Tuần 1</h4>
            <p class="text-muted mb-0">Học kỳ: @hocKy?.TenHocKy</p>
        </div>
        <div>
            @if (!choPhepKiemKe)
            {
                <span class="badge bg-warning text-dark me-2">
                    <i class="bi bi-info-circle me-1"></i>Ngoài thời gian kiểm kê (Tuần 1)
                </span>
            }
            else
            {
                <span class="badge bg-success me-2">
                    <i class="bi bi-check-circle me-1"></i>Đang trong thời gian kiểm kê
                </span>
            }
            <a href="/QuanLyPhong" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-building text-primary" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@tongPhong</h3>
                    <p class="text-muted mb-0">Tổng số phòng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@phongDaKiemKe</h3>
                    <p class="text-muted mb-0">Đã kiểm kê</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@phongChuaKiemKe</h3>
                    <p class="text-muted mb-0">Chưa kiểm kê</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-pc-display text-info" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@mayHoatDong/@tongMay</h3>
                    <p class="text-muted mb-0">Máy hoạt động (@tyLeHoatDong.ToString("F1")%)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng danh sách phòng -->
    <div class="card">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Danh sách phòng cần kiểm kê</h5>
                <div>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filterStatus" id="filterAll" checked autocomplete="off">
                        <label class="btn btn-outline-primary btn-sm" for="filterAll" onclick="filterPhong('all')">Tất cả (@tongPhong)</label>
                        
                        <input type="radio" class="btn-check" name="filterStatus" id="filterDone" autocomplete="off">
                        <label class="btn btn-outline-success btn-sm" for="filterDone" onclick="filterPhong('done')">Đã kiểm kê (@phongDaKiemKe)</label>
                        
                        <input type="radio" class="btn-check" name="filterStatus" id="filterPending" autocomplete="off">
                        <label class="btn btn-outline-warning btn-sm" for="filterPending" onclick="filterPhong('pending')">Chưa kiểm kê (@phongChuaKiemKe)</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="tableKiemKe">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th style="width: 100px;">Mã phòng</th>
                            <th>Tên phòng</th>
                            <th style="width: 150px;">Vị trí</th>
                            <th class="text-center" style="width: 100px;">Sức chứa</th>
                            <th class="text-center" style="width: 150px;">Máy hoạt động</th>
                            <th class="text-center" style="width: 120px;">Trạng thái</th>
                            <th style="width: 150px;">Kiểm kê gần nhất</th>
                            <th class="text-center" style="width: 200px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var phong in Model)
                            {
                                var daKiemKe = phong.NgayKiemKeGanNhat.HasValue;
                                var statusClass = daKiemKe ? "status-done" : "status-pending";
                                
                                <tr class="@statusClass" data-phong-id="@phong.Id">
                                    <td><strong class="text-primary">@phong.MaPhong</strong></td>
                                    <td>@phong.TenPhong</td>
                                    <td><small class="text-muted">@phong.ViTri</small></td>
                                    <td class="text-center"><span class="badge bg-info">@phong.SucChua máy</span></td>
                                    <td class="text-center">
                                        <div class="progress" style="height: 20px;">
                                            @{
                                                var percent = phong.SucChua > 0 ? (phong.SoMayHoatDong * 100.0 / phong.SucChua) : 0;
                                                var progressColor = percent >= 80 ? "bg-success" : (percent >= 50 ? "bg-warning" : "bg-danger");
                                            }
                                            <div class="progress-bar @progressColor" role="progressbar" 
                                                 style="width: @percent%" 
                                                 aria-valuenow="@phong.SoMayHoatDong" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="@phong.SucChua">
                                                @phong.SoMayHoatDong/@phong.SucChua
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (phong.DangHoatDong)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Ngừng</span>
                                        }
                                    </td>
                                    <td>
                                    <td>
                                        @if (daKiemKe)
                                        {
                                            <div>
                                                <small class="text-muted d-block">@phong.NgayKiemKeGanNhat.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                @if (!string.IsNullOrEmpty(phong.TenNguoiKiemKe))
                                                {
                                                    <small class="text-muted"><i class="bi bi-person me-1"></i>@phong.TenNguoiKiemKe</small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Chưa kiểm kê
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (choPhepKiemKe)
                                        {
                                            <button type="button" class="btn btn-sm btn-primary me-1" 
                                                    onclick="openKiemKeModal(@phong.Id, '@phong.MaPhong', '@phong.TenPhong', @phong.SucChua, @phong.SoMayHoatDong, @(phong.DangHoatDong ? "true" : "false"))">
                                                <i class="bi bi-pencil-square me-1"></i>Kiểm kê
                                            </button>
                                        }
                                        <a href="/QuanLyPhong/ChiTiet/@phong.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-2">Chưa có phòng nào trong hệ thống</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal kiểm kê phòng -->
<div class="modal fade" id="kiemKeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-clipboard-check me-2"></i>Kiểm kê phòng: <span id="modalPhongName"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="formKiemKe" onsubmit="return submitKiemKe(event)">
                <div class="modal-body">
                    <input type="hidden" id="phongId" name="phongId">
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Vui lòng kiểm tra tình trạng thực tế của phòng và cập nhật thông tin chính xác
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-pc-display me-1"></i>Số máy hoạt động
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="number" class="form-control form-control-lg" 
                                       id="soMayHoatDong" name="soMayHoatDong" 
                                       min="0" required>
                                <span class="input-group-text">/ <span id="modalSucChua"></span> máy</span>
                            </div>
                            <small class="text-muted">Nhập số máy tính đang hoạt động tốt</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-toggle-on me-1"></i>Trạng thái phòng
                                <span class="text-danger">*</span>
                            </label>
                            <select class="form-select form-select-lg" id="trangThaiHoatDong" name="trangThaiHoatDong" required>
                                <option value="true">Hoạt động bình thường</option>
                                <option value="false">Tạm ngừng hoạt động</option>
                            </select>
                            <small class="text-muted">Chọn trạng thái hoạt động của phòng</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-chat-left-text me-1"></i>Ghi chú kiểm kê
                        </label>
                        <textarea class="form-control" id="ghiChuKiemKe" name="ghiChuKiemKe" 
                                  rows="3" placeholder="Nhập ghi chú về tình trạng phòng, thiết bị hư hỏng, cần sửa chữa..."></textarea>
                    </div>

                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Lưu ý:</strong> Thông tin kiểm kê sẽ được lưu vào hệ thống và không thể chỉnh sửa sau khi hoàn tất.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Xác nhận kiểm kê
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Mở modal kiểm kê
    function openKiemKeModal(id, maPhong, tenPhong, sucChua, soMayHoatDong, trangThai) {
        $('#phongId').val(id);
        $('#modalPhongName').text(maPhong + ' - ' + tenPhong);
        $('#modalSucChua').text(sucChua);
        $('#soMayHoatDong').val(soMayHoatDong).attr('max', sucChua);
        $('#trangThaiHoatDong').val(trangThai);
        $('#ghiChuKiemKe').val('');
        $('#kiemKeModal').modal('show');
    }

    // Submit form kiểm kê
    function submitKiemKe(event) {
        event.preventDefault();
        
        const phongId = $('#phongId').val();
        const soMayHoatDong = parseInt($('#soMayHoatDong').val());
        const trangThaiHoatDong = $('#trangThaiHoatDong').val() === 'true';
        const ghiChu = $('#ghiChuKiemKe').val();

        // Disable submit button
        const submitBtn = event.target.querySelector('button[type="submit"]');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Đang xử lý...';

        $.ajax({
            url: '/QuanLyPhong/KiemKe',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                PhongId: phongId,
                SoMayHoatDong: soMayHoatDong,
                TrangThaiHoatDong: trangThaiHoatDong,
                GhiChu: ghiChu
            }),
            success: function(response) {
                if (response.success) {
                    $('#kiemKeModal').modal('hide');
                    Swal.fire({
                        icon: 'success',
                        title: 'Kiểm kê thành công!',
                        text: response.message || 'Thông tin kiểm kê đã được cập nhật',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: response.message || 'Không thể kiểm kê phòng'
                    });
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-check-circle me-1"></i>Xác nhận kiểm kê';
                }
            },
            error: function(xhr) {
                let errorMsg = 'Có lỗi xảy ra khi kiểm kê phòng';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                }
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: errorMsg
                });
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="bi bi-check-circle me-1"></i>Xác nhận kiểm kê';
            }
        });

        return false;
    }

    // Filter phòng theo trạng thái
    function filterPhong(status) {
        const rows = document.querySelectorAll('#tableKiemKe tbody tr[data-phong-id]');
        
        rows.forEach(row => {
            if (status === 'all') {
                row.style.display = '';
            } else if (status === 'done') {
                row.style.display = row.classList.contains('status-done') ? '' : 'none';
            } else if (status === 'pending') {
                row.style.display = row.classList.contains('status-pending') ? '' : 'none';
            }
        });
    }

    // Validation
    $(document).ready(function() {
        $('#soMayHoatDong').on('input', function() {
            const val = parseInt($(this).val());
            const max = parseInt($(this).attr('max'));
            
            if (val > max) {
                $(this).val(max);
                Swal.fire({
                    icon: 'warning',
                    title: 'Cảnh báo',
                    text: 'Số máy hoạt động không được vượt quá sức chứa phòng!',
                    timer: 2000
                });
            }
        });
    });
</script>

<style>
    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #f8f9fa;
    }
    
    .status-done {
        background-color: rgba(25, 135, 84, 0.05);
    }
    
    .status-pending {
        background-color: rgba(255, 193, 7, 0.05);
    }
    
    .progress {
        background-color: #e9ecef;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: none;
    }
</style>
}
</div>
