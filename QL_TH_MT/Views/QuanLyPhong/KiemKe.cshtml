@model KiemKeViewModel
@{
    ViewData["Title"] = "Kiểm kê phòng " + Model?.TenPhong;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-clipboard-check me-2"></i>Kiểm kê phòng @Model.TenPhong
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Thông tin hiện tại:</strong> 
                    Sức chứa @Model.SucChua máy, 
                    Máy hoạt động: @Model.SoMayHoatDongHienTai
                </div>
                
                <form asp-action="LuuKiemKe" method="post">
                    <input type="hidden" name="PhongId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Số máy hoạt động <span class="text-danger">*</span></label>
                        <input type="number" name="SoMayHoatDong" class="form-control" 
                               value="@Model.SoMayHoatDongHienTai" min="0" max="@Model.SucChua" required />
                        <small class="text-muted">Tối đa: @Model.SucChua máy</small>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Phần mềm đã cài đặt</label>
                        <div class="row">
                            @if (ViewBag.TatCaPhanMem != null)
                            {
                                foreach (var pm in ViewBag.TatCaPhanMem as IEnumerable<SelectListItem>)
                                {
                                    var isChecked = Model.PhanMemIds?.Contains(int.Parse(pm.Value)) ?? false;
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="PhanMemIds" value="@pm.Value" 
                                                   class="form-check-input" id="pm_@pm.Value"
                                                   @(isChecked ? "checked" : "")>
                                            <label class="form-check-label" for="pm_@pm.Value">@pm.Text</label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Ghi chú kiểm kê</label>
                        <textarea name="GhiChu" class="form-control" rows="3" 
                                  placeholder="Ghi chú về tình trạng phòng, máy hỏng..."></textarea>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/QuanLyPhong/ChiTiet/@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Lưu kiểm kê
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
