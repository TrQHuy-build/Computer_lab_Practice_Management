@model PhongThucHanhViewModel
@{
    ViewData["Title"] = "Chi tiết phòng thực hành";
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-building me-2"></i>Thông tin phòng
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="150">Tên phòng:</th>
                        <td><strong>@Model.TenPhong</strong></td>
                    </tr>
                    <tr>
                        <th>Vị trí:</th>
                        <td>@Model.ViTri</td>
                    </tr>
                    <tr>
                        <th>Sức chứa:</th>
                        <td>@Model.SucChua máy</td>
                    </tr>
                    <tr>
                        <th>Máy hoạt động:</th>
                        <td>
                            <span class="badge @(Model.SoMayHoatDong >= Model.SucChua * 0.8 ? "bg-success" : "bg-warning")">
                                @Model.SoMayHoatDong/@Model.SucChua
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>
                            @if (Model.DangHoatDong)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Tạm khóa</span>
                            }
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        <tr>
                            <th>Mô tả:</th>
                            <td>@Model.MoTa</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-pc-display me-2"></i>Phần mềm đã cài đặt
            </div>
            <div class="card-body">
                @if (Model.PhanMems != null && Model.PhanMems.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var pm in Model.PhanMems)
                        {
                            <span class="badge bg-info" style="font-size:14px">
                                <i class="bi bi-box me-1"></i>@pm
                            </span>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Chưa có phần mềm nào được ghi nhận</p>
                }
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <i class="bi bi-clipboard-check me-2"></i>Lịch sử kiểm kê
            </div>
            <div class="card-body">
                @if (ViewBag.LichSuKiemKe != null && ((IEnumerable<dynamic>)ViewBag.LichSuKiemKe).Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var kk in ViewBag.LichSuKiemKe as IEnumerable<dynamic>)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@kk.NgayKiemKe.ToString("dd/MM/yyyy")</strong>
                                    <br/>
                                    <small class="text-muted">Máy hoạt động: @kk.SoMayHoatDong</small>
                                </div>
                                <span class="badge bg-secondary">@kk.NguoiKiemKe</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">Chưa có lịch sử kiểm kê</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a href="/QuanLyPhong" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Quay lại
    </a>
    <div>
        <a href="/QuanLyPhong/KiemKe" class="btn btn-warning me-2">
            <i class="bi bi-clipboard-check me-1"></i>Đi tới trang kiểm kê
        </a>
        <a href="/QuanLyPhong/Sua/@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Chỉnh sửa
        </a>
    </div>
</div>
