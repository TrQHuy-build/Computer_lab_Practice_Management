@model MonHocViewModel
@{
    ViewData["Title"] = "Sửa môn học";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil-square me-2"></i>Sửa môn học
            </div>
            <div class="card-body">
                <form asp-action="Sua" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="MaMonHoc" class="form-label">Mã môn học <span class="text-danger">*</span></label>
                        <input asp-for="MaMonHoc" class="form-control" required />
                        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="TenMonHoc" class="form-label">Tên môn học <span class="text-danger">*</span></label>
                        <input asp-for="TenMonHoc" class="form-control" required />
                        <span asp-validation-for="TenMonHoc" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SoTinChi" class="form-label">Số tín chỉ <span class="text-danger">*</span></label>
                        <select asp-for="SoTinChi" class="form-select" id="soTinChi" required>
                            <option value="1">1 tín chỉ</option>
                            <option value="2">2 tín chỉ</option>
                            <option value="3">3 tín chỉ</option>
                            <option value="4">4 tín chỉ</option>
                        </select>
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SoBuoiThucHanh" class="form-label">Số buổi thực hành <span class="text-danger">*</span></label>
                        <input asp-for="SoBuoiThucHanh" class="form-control" type="number" min="1" max="20" required />
                        <span asp-validation-for="SoBuoiThucHanh" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="DangHoatDong" class="form-check-input" type="checkbox" />
                        <label asp-for="DangHoatDong" class="form-check-label">Đang hoạt động</label>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/QuanLyMonHoc" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
