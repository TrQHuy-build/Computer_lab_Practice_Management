@model MonHocCreateViewModel
@{
    ViewData["Title"] = "Thêm môn học";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-book me-2"></i>Thêm môn học mới
            </div>
            <div class="card-body">
                <form asp-action="Tao" method="post">
                    <div class="mb-3">
                        <label asp-for="MaMonHoc" class="form-label">Mã môn học <span class="text-danger">*</span></label>
                        <input asp-for="MaMonHoc" class="form-control" placeholder="VD: INT1234" required />
                        <span asp-validation-for="MaMonHoc" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="TenMonHoc" class="form-label">Tên môn học <span class="text-danger">*</span></label>
                        <input asp-for="TenMonHoc" class="form-control" placeholder="VD: Lập trình Web" required />
                        <span asp-validation-for="TenMonHoc" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SoTinChi" class="form-label">Số tín chỉ <span class="text-danger">*</span></label>
                        <select asp-for="SoTinChi" class="form-select" id="soTinChi" required>
                            <option value="">-- Chọn số tín chỉ --</option>
                            <option value="1">1 tín chỉ</option>
                            <option value="2">2 tín chỉ</option>
                            <option value="3">3 tín chỉ</option>
                            <option value="4">4 tín chỉ</option>
                        </select>
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-secondary" id="infoBox">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Số tuần lý thuyết:</strong> <span id="soTuanLyThuyet">-</span>
                        <br/>
                        <small class="text-muted">Tính tự động dựa trên số tín chỉ (1TC=0 tuần, 2TC=4 tuần, 3TC=6 tuần, 4TC=8 tuần)</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/QuanLyMonHoc" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Thêm môn học
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('soTinChi').addEventListener('change', function() {
            var soTuan = {1: 0, 2: 4, 3: 6, 4: 8}[this.value] || '-';
            document.getElementById('soTuanLyThuyet').textContent = soTuan + ' tuần';
        });
    </script>
}
