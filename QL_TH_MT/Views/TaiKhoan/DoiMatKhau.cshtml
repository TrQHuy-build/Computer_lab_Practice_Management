@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-key me-2"></i>Đổi mật khẩu
            </div>
            <div class="card-body">
                <form asp-action="DoiMatKhau" method="post">
                    <div class="mb-3">
                        <label asp-for="MatKhauHienTai" class="form-label">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                        <input asp-for="MatKhauHienTai" type="password" class="form-control" required />
                        <span asp-validation-for="MatKhauHienTai" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MatKhauMoi" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                        <input asp-for="MatKhauMoi" type="password" class="form-control" required />
                        <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                        <small class="text-muted">Tối thiểu 6 ký tự</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="XacNhanMatKhau" class="form-label">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                        <input asp-for="XacNhanMatKhau" type="password" class="form-control" required />
                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/TrangChu" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Đổi mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
