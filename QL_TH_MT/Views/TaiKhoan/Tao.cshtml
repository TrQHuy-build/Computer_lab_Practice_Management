@model CreateAccountViewModel
@{
    ViewData["Title"] = "Tạo tài khoản mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-plus me-2"></i>Tạo tài khoản mới
            </div>
            <div class="card-body">
                <form asp-action="Tao" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoTen" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="HoTen" class="form-control" required />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input asp-for="TenDangNhap" class="form-control" required />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MatKhau" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="MatKhau" type="password" class="form-control" required />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                            <small class="text-muted">Tối thiểu 6 ký tự</small>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VaiTro" class="form-label">Vai trò <span class="text-danger">*</span></label>
                            <select asp-for="VaiTro" class="form-select" id="vaiTroSelect" required>
                                <option value="">-- Chọn vai trò --</option>
                                <option value="Admin">Quản trị viên</option>
                                <option value="PhongDaoTao">Phòng Đào tạo</option>
                                <option value="TrungTamDaoTaoThucHanh">Trung tâm ĐTTH</option>
                                <option value="GiangVien">Giảng viên</option>
                            </select>
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3" id="loaiGvDiv" style="display:none">
                            <label asp-for="LoaiGiangVien" class="form-label">Loại giảng viên</label>
                            <select asp-for="LoaiGiangVien" class="form-select">
                                <option value="">-- Chọn loại --</option>
                                <option value="ThinhGiang">Thỉnh giảng</option>
                                <option value="CoHuu">Cố hữu</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SoDienThoai" class="form-label">Số điện thoại</label>
                        <input asp-for="SoDienThoai" class="form-control" />
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="/TaiKhoan/DanhSach" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Tạo tài khoản
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('vaiTroSelect').addEventListener('change', function() {
            var loaiGvDiv = document.getElementById('loaiGvDiv');
            if (this.value === 'GiangVien') {
                loaiGvDiv.style.display = 'block';
            } else {
                loaiGvDiv.style.display = 'none';
            }
        });
        
        // Check on page load
        if (document.getElementById('vaiTroSelect').value === 'GiangVien') {
            document.getElementById('loaiGvDiv').style.display = 'block';
        }
    </script>
}
