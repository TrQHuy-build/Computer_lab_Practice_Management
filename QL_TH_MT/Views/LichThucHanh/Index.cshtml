@model QL_TH_MT.ViewModels.DanhSachLichThucHanhViewModel
@{
    ViewData["Title"] = "Lich thuc hanh";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i>Bo loc
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <label class="form-label">Tuan</label>
                    <select name="tuanHoc" class="form-select">
                        <option value="">Tat ca</option>
                        @for (int i = 1; i <= 15; i++)
                        {
                            <option value="@i">Tuan @i</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">
                        <i class="bi bi-search me-1"></i>Loc
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model?.DanhSachLich != null && Model.DanhSachLich.Any())
{
    <div class="card">
        <div class="card-header">
            <strong>Danh sach lich</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tuan</th>
                            <th>Thu</th>
                            <th>Ca</th>
                            <th>Hoc phan</th>
                            <th>Phong</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lich in Model.DanhSachLich)
                        {
                            <tr>
                                <td>Tuan @lich.TuanHoc</td>
                                <td>Thu @lich.ThuTrongTuan</td>
                                <td>Ca @lich.CaHoc</td>
                                <td>@lich.HocPhan?.MaHocPhan</td>
                                <td>@lich.PhongThucHanh?.TenPhong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-calendar-x text-muted" style="font-size:64px"></i>
            <p class="mt-3 text-muted">Chua co lich thuc hanh nao</p>
        </div>
    </div>
}
