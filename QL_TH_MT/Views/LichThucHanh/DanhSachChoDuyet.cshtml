@model IEnumerable<LichChoDuyetViewModel>
@{
    ViewData["Title"] = "Duyệt lịch thực hành";
}

<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    Đây là danh sách lịch thực hành do Phòng Đào tạo gửi sang. 
    Vui lòng kiểm tra và duyệt để đưa lịch vào hoạt động chính thức.
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-check2-square me-2"></i>Lịch chờ duyệt</span>
        @if (Model != null && Model.Any())
        {
            <div>
                <form asp-action="DuyetTatCa" method="post" style="display:inline">
                    <button type="submit" class="btn btn-success btn-sm"
                            onclick="return confirm('Duyệt tất cả lịch?')">
                        <i class="bi bi-check-all me-1"></i>Duyệt tất cả
                    </button>
                </form>
            </div>
        }
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <input type="checkbox" id="checkAll" class="form-check-input">
                            </th>
                            <th>Học phần</th>
                            <th>Giảng viên</th>
                            <th>Phòng</th>
                            <th>Thứ</th>
                            <th>Ca</th>
                            <th>Tuần</th>
                            <th>Ngày gửi</th>
                            <th width="150">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedIds" value="@item.Id" class="form-check-input item-check">
                                </td>
                                <td><code>@item.MaHocPhan</code></td>
                                <td>
                                    @item.TenGiangVien
                                    <span class="badge @(item.LoaiGV == "ThinhGiang" ? "bg-warning text-dark" : "bg-info")">
                                        @(item.LoaiGV == "ThinhGiang" ? "TG" : "CH")
                                    </span>
                                </td>
                                <td>@item.TenPhong</td>
                                <td>Thứ @item.Thu</td>
                                <td>Ca @item.Ca</td>
                                <td>Tuần @item.Tuan</td>
                                <td>@item.NgayGui.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <form asp-action="Duyet" asp-route-id="@item.Id" method="post" style="display:inline">
                                            <button type="submit" class="btn btn-success" title="Duyệt">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-danger" title="Từ chối"
                                                onclick="showRejectModal(@item.Id)">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center py-4">
                <i class="bi bi-check-circle" style="font-size:48px"></i><br/>
                Không có lịch nào chờ duyệt
            </p>
        }
    </div>
</div>

<!-- Modal từ chối -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="TuChoi" method="post">
                <input type="hidden" name="id" id="rejectId">
                <div class="modal-header">
                    <h5 class="modal-title">Từ chối lịch</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Lý do từ chối <span class="text-danger">*</span></label>
                        <textarea name="lyDo" class="form-control" rows="3" required 
                                  placeholder="Nhập lý do từ chối..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Từ chối</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('checkAll').addEventListener('change', function() {
            document.querySelectorAll('.item-check').forEach(cb => cb.checked = this.checked);
        });
        
        function showRejectModal(id) {
            document.getElementById('rejectId').value = id;
            new bootstrap.Modal(document.getElementById('rejectModal')).show();
        }
    </script>
}
