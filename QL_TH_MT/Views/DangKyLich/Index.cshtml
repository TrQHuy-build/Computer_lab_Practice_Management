@model IEnumerable<QL_TH_MT.Models.HopDongNew>
@{
    ViewData["Title"] = "Đăng ký lịch giảng dạy";
    var hocKy = ViewBag.HocKy as QL_TH_MT.Models.HocKyNew;
    var choPhepDangKy = ViewBag.ChoPhepDangKy as bool? ?? false;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-check me-2" style="font-size: 1.5rem;"></i>
                        <div>
                            <h5 class="mb-0">Đăng ký lịch giảng dạy</h5>
                            <small>Học kỳ: @hocKy?.TenHocKy</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (!choPhepDangKy)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Lưu ý:</strong> Hiện không trong thời gian đăng ký lịch (Tuần 2). Bạn chỉ có thể xem danh sách hợp đồng.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            <strong>Hướng dẫn:</strong> Vui lòng đăng ký lịch giảng dạy cho từng hợp đồng của bạn. Mỗi học phần cần 3 buổi thực hành liên tiếp (cùng thứ, cùng ca, 3 tuần liên tiếp).
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="row g-3">
                            @foreach (var hopDong in Model)
                            {
                                var daDangKy = hopDong.DangKyLichs?.Any() ?? false;
                                var soMonHoc = hopDong.HopDongMonHocs?.Count ?? 0;

                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-@(daDangKy ? "success" : "secondary")">
                                        <div class="card-header @(daDangKy ? "bg-success" : "bg-secondary") text-white">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">
                                                    <i class="bi bi-file-earmark-text me-2"></i>
                                                    Hợp đồng #@hopDong.SoHopDong
                                                </h6>
                                                @if (daDangKy)
                                                {
                                                    <span class="badge bg-light text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Đã đăng ký
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark">
                                                        <i class="bi bi-clock"></i> Chưa đăng ký
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <strong class="text-muted d-block mb-2">
                                                    <i class="bi bi-book me-1"></i> Môn học:
                                                </strong>
                                                @if (hopDong.HopDongMonHocs != null && hopDong.HopDongMonHocs.Any())
                                                {
                                                    <ul class="list-unstyled mb-0">
                                                        @foreach (var monHoc in hopDong.HopDongMonHocs)
                                                        {
                                                            <li class="mb-1">
                                                                <span class="badge bg-primary me-1">@monHoc.MonHoc?.MaMonHoc</span>
                                                                @monHoc.MonHoc?.TenMonHoc
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có môn học</span>
                                                }
                                            </div>

                                            <div class="mb-3">
                                                <span class="badge bg-info">
                                                    <i class="bi bi-stack"></i> @soMonHoc học phần
                                                </span>
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-calendar3"></i> @(soMonHoc * 3) buổi TH
                                                </span>
                                            </div>

                                            @if (daDangKy)
                                            {
                                                var soCaDaDangKy = hopDong.DangKyLichs?.Count ?? 0;
                                                <div class="alert alert-success alert-sm mb-2">
                                                    <small>
                                                        <i class="bi bi-check-circle me-1"></i>
                                                        Đã đăng ký <strong>@soCaDaDangKy</strong> ca học
                                                    </small>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(hopDong.GhiChu))
                                            {
                                                <div class="alert alert-light alert-sm mb-2">
                                                    <small>
                                                        <i class="bi bi-chat-square-quote me-1"></i>
                                                        @hopDong.GhiChu
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer bg-light">
                                            @if (choPhepDangKy)
                                            {
                                                <a href="@Url.Action("Form", new { hopDongId = hopDong.Id })" 
                                                   class="btn btn-@(daDangKy ? "warning" : "primary") btn-sm w-100">
                                                    <i class="bi bi-@(daDangKy ? "pencil" : "plus-circle") me-1"></i>
                                                    @(daDangKy ? "Cập nhật đăng ký" : "Đăng ký lịch")
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                                    <i class="bi bi-lock me-1"></i> Không trong thời gian đăng ký
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
                            <p class="text-muted mt-3 mb-0">
                                Bạn chưa có hợp đồng giảng dạy nào trong học kỳ này.
                            </p>
                            <p class="text-muted">
                                Vui lòng liên hệ Phòng đào tạo để được hỗ trợ.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .alert-sm {
        padding: 0.5rem;
        font-size: 0.875rem;
    }

    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .badge {
        font-weight: 500;
    }
</style>
