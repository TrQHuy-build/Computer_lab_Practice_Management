@model QL_TH_MT.ViewModels.HopDongCreateViewModel
@{
    ViewData["Title"] = "Sửa hợp đồng";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Sửa hợp đồng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Sua" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaHopDong" class="form-label">Mã hợp đồng <span class="text-danger">*</span></label>
                                <input asp-for="MaHopDong" class="form-control" />
                                <span asp-validation-for="MaHopDong" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NgayKy" class="form-label">Ngày ký</label>
                                <input asp-for="NgayKy" type="date" class="form-control" />
                                <span asp-validation-for="NgayKy" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GiangVienId" class="form-label">Giảng viên thỉnh giảng <span class="text-danger">*</span></label>
                            <select asp-for="GiangVienId" class="form-select">
                                <option value="">-- Chọn giảng viên --</option>
                                @if (Model.DanhSachGiangVien != null)
                                {
                                    foreach (var gv in Model.DanhSachGiangVien)
                                    {
                                        <option value="@gv.Id" selected="@(gv.Id == Model.GiangVienId)">@gv.HoTen (@gv.LoaiGiangVien)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="GiangVienId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HocKyId" class="form-label">Học kỳ <span class="text-danger">*</span></label>
                            <select asp-for="HocKyId" class="form-select">
                                <option value="">-- Chọn học kỳ --</option>
                                @if (Model.DanhSachHocKy != null)
                                {
                                    foreach (var hk in Model.DanhSachHocKy)
                                    {
                                        <option value="@hk.Id" selected="@(hk.Id == Model.HocKyId)">@hk.TenHocKy</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="HocKyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Môn học <span class="text-danger">*</span></label>
                            <div class="alert alert-info py-2">
                                <i class="bi bi-info-circle me-1"></i>
                                Chọn các môn học giảng viên sẽ dạy trong học kỳ này
                            </div>
                            <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                @if (Model.DanhSachMonHoc != null)
                                {
                                    foreach (var mh in Model.DanhSachMonHoc)
                                    {
                                        var isChecked = Model.MonHocIds?.Contains(mh.Id) ?? false;
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="MonHocIds" value="@mh.Id" 
                                                   id="monhoc_@mh.Id"
                                                   @(isChecked ? "checked" : "")>
                                            <label class="form-check-label" for="monhoc_@mh.Id">
                                                <strong>@mh.MaMonHoc</strong> - @mh.TenMonHoc 
                                                <span class="text-muted">(@mh.SoBuoiThucHanh buổi TH)</span>
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                            <span asp-validation-for="MonHocIds" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                            <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg me-1"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
