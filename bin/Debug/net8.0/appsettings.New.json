{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=QL_PHONG_TH;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "BookingSettings": {
    "MinDaysBeforeBooking": 3,
    "MaxBookingDuration": 30,
    "MinBookingHours": 1,
    "MaxBookingHours": 4,
    "StartTime": "07:00",
    "EndTime": "21:00"
  },
  "CacheSettings": {
    "DefaultExpirationMinutes": 30,
    "PhongMayCacheMinutes": 60,
    "HocPhanCacheMinutes": 60,
    "PhanMemCacheMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ql_th_mt-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*"
}
